extends base

block content
    section.section-about
        .u-center-text.u-margin-bottom-big
            h2.heading-secondary
                | Exciting tours for adventurous people
        .row
            .col-1-of-2
                h3.heading-tertiary.u-margin-bottom-small You&apos;re going to fall in love with Ethiopia
                p.paragraph
                    | Ethiopia, in the Horn of Africa, is a rugged, landlocked country split by the Great Rift Valley. With archaeological finds dating back more than 3 million years, 
                    |it’s a place of ancient culture. Among its important sites are Lalibela with its rock-cut Christian churches from the 12th–13th centuries. Aksum is the ruins of an ancient city with obelisks, tombs, castles and Our Lady Mary of Zion church.
               
            .col-1-of-2
                .composition
                    img.composition__photo.composition__photo--p1(srcset='img/tours/ethio-1.jpg 300w' sizes='(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px' alt='Photo 1' src='img/nat-1-large.jpg')
                    img.composition__photo.composition__photo--p2(srcset='img/tours/ethio-2.jpg 300w' sizes='(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px' alt='Photo 2' src='img/nat-2-large.jpg')
                    img.composition__photo.composition__photo--p3(srcset='img/tours/ethio-3.jpg 300w' sizes='(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px' alt='Photo 3' src='img/nat-3-large.jpg')
                    

    main.main 
        .u-center-text.u-margin-bottom-big
                h2.heading-secondary
                    | MOST POPULAR TOURS
        .card-container 
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            span= tour.name
                    .card__details
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-days tour`
                        p.card__text= tour.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= tour.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= tour.startDate[0].toLocaleString('en-us',{month:'long',year:'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= `${tour.locations.length} stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${tour.maxGroupSize} people`

                    .card__footer
                        p
                            span.card__footer-value= `${tour.price} `
                            |
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value= tour.ratingsAverage
                            |
                            span.card__footer-text= `rating (${tour.ratingQuantity})`
                        a.btn.btn--green.btn--small(href=`/tours/${tour.slug}`) Details

