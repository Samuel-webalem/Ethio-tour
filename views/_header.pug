header.header 
        nav.nav.nav--tours
            a.nav__el(href='/') All tours
        .header__logo 
            img(src="/img/logo-white.png", alt="logo")
        nav.nav.nav--user
            if user
                a.nav__el.nav__el--logout(href='/') Log out 
                a.nav__el(href='/me')
                    if(user.photo)
                        img.nav__user-img(src=`img/users/${user.photo}` alt="User photo" class="nav__user-img")
                    else 
                        img.nav__user-img(src=`img/users/default.jpeg` alt="User photo" class="nav__user-img")
                    span= user.name.split(' ')[0]
            else
                a.nav__el(href='/login') Log in
                a.nav__el.nav__el--cta(href='/signin') Sign up